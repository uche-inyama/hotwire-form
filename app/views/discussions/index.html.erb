<%= turbo_stream_from "discussions" %>

<div class="d-flex justify-content-between align-items-center">
  <h1>Discussions</h1>
  <%= link_to "New discussuon", new_discussion_path, class: "btn btn-primary"%>
</div>

<div class="row mt-4">
  <%= turbo_stream_from 'categories'%>
  <div class= "col-3">
    <h5 id="categories"></h5>
    <div id="categories">
      <%= render partial: "categories/category", collection: Category.sorted %>
    </div>
  </div>
  <div class="col">
    <div id="discussions">
      <%= render @discussions %>
    </div>
  </div>
</div>